{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "target": "es2020",
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es2020",
      "es2021",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
